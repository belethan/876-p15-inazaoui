{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="{{ asset('css/login.css') }}">
{% endblock %}

{% block body %}
    <div class="login-page">

        <div class="container d-flex justify-content-center align-items-center min-vh-100">
            <div class="login-card shadow-lg">

                <div class="row g-0 h-100">

                    {# ===== Colonne image ===== #}
                    <div class="col-md-6 d-none d-md-flex login-image-col">
                        <div class="login-image-inner">
                            <img src="{{ asset('images/login.png') }}" alt="Login">
                        </div>
                    </div>

                    {# ===== Colonne formulaire ===== #}
                    <div class="col-md-6 col-12 login-form-col">
                        <div class="login-form-wrapper">

                            <h2 class="login-title">Identification</h2>
                            <p class="login-subtitle">
                                Veuillez saisir vos informations pour accéder à votre espace.
                            </p>

                            {% if error %}
                                <div class="alert alert-danger">
                                    {{ error.messageKey|trans(error.messageData, 'security') }}
                                </div>
                            {% endif %}

                            <form method="post" action="{{ path('login') }}" class="mt-4">
                                <input type="hidden" name="_csrf_token"
                                       value="{{ csrf_token('authenticate') }}">
                                <div class="mb-4">
                                    <label for="email" class="form-label">
                                        Adresse email <span class="required">*</span>
                                    </label>
                                    <input type="email"
                                           id="email"
                                           name="email"
                                           class="form-control"
                                           value="{{ last_username|default('') }}"
                                           required>
                                </div>


                                <div class="mb-4">
                                    <label for="password" class="form-label">
                                        Mot de passe <span class="required">*</span>
                                    </label>
                                    <input type="password"
                                           id="password"
                                           name="password"
                                           class="form-control"
                                           required>
                                </div>

                                <button class="btn btn-primary w-100 mt-2">
                                    Connexion
                                </button>
                            </form>

                            <div class="text-center mt-4">
                            <span class="text-muted">
                                Vous n'avez pas de compte ?
                                <span class="text-muted">Création bientôt disponible</span>
                            </span>
                            </div>

                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
{% endblock %}
