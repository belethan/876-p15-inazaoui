name: CI Symfony

on:
  push:
    branches:
      - main
  pull_request:
  workflow_dispatch:

jobs:
  quality:
    name: Quality checks (MySQL)
    runs-on: ubuntu-latest

    # =========================
    # Service MySQL
    # =========================
    services:
      mysql:
        image: mysql:8.0
        env:
          MYSQL_ROOT_PASSWORD: root
          MYSQL_DATABASE: inazaoui_test
          MYSQL_USER: test
          MYSQL_PASSWORD: test
        ports:
          - 3306:3306
        options: >-
          --health-cmd="mysqladmin ping -h 127.0.0.1 -u root -proot"
          --health-interval=10s
          --health-timeout=5s
          --health-retries=5

    steps:
      # =========================
      # 1. Checkout du code
      # =========================
      - name: Checkout repository
        uses: actions/checkout@v4

      # =========================
      # 2. Setup PHP
      # =========================
      - name: Setup PHP
        uses: shivammathur/setup-php@v2
        with:
          php-version: '8.4'
          coverage: xdebug
          extensions: mbstring, intl, pdo_mysql
          tools: composer

      # =========================
      # 3. Validation composer.json
      # =========================
      - name: Validate composer.json
        run: composer validate --no-check-publish

      # =========================
      # 4. Installation des dépendances
      # =========================
      - name: Install dependencies
        run: |
          composer install \
            --no-interaction \
            --prefer-dist \
            --no-progress

      # =========================
      # 5. Attente MySQL (sécurité)
      # =========================
      - name: Wait for MySQL
        run: |
          for i in {1..30}; do
            mysqladmin ping -h 127.0.0.1 -u root -proot && break
            sleep 2
          done

      # =========================
      # 6. Préparation base de tests
      # =========================
      - name: Prepare test database
        env:
          APP_ENV: test
          DATABASE_URL: mysql://test:test@127.0.0.1:3306/inazaoui_test?serverVersion=8.0
        run: |
          php bin/console doctrine:database:create --if-not-exists
          php bin/console doctrine:schema:create

      # =========================
      # 7. PHPUnit + couverture
      # =========================
      - name: Run PHPUnit Tests
        env:
          APP_ENV: test
          DATABASE_URL: mysql://test:test@127.0.0.1:3306/inazaoui_test?serverVersion=8.0
        run: |
          php bin/phpunit \
            --coverage-text \
            --coverage-clover=coverage.xml

      # =========================
      # 8. Upload couverture
      # =========================
      - name: Upload coverage report
        uses: actions/upload-artifact@v4
        with:
          name: phpunit-coverage
          path: coverage.xml

      # =========================
      # 9. Analyse statique PHPStan
      # =========================
      - name: Run PHPStan
        run: vendor/bin/phpstan analyse --no-progress
