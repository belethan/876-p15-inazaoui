name: CI Symfony

on:
  push:
    branches: [ main ]
  pull_request:
  workflow_dispatch:

jobs:
  quality:
    name: Quality checks (MySQL)
    runs-on: ubuntu-latest

    container:
      image: php:8.4-cli

    services:
      mysql:
        image: mysql:8.0
        env:
          MYSQL_ROOT_PASSWORD: root
          MYSQL_DATABASE: inazaoui_test
          MYSQL_USER: test
          MYSQL_PASSWORD: test
        options: >-
          --health-cmd="mysqladmin ping -h mysql -u root -proot"
          --health-interval=10s
          --health-timeout=5s
          --health-retries=5

    env:
      APP_ENV: test
      DATABASE_URL: mysql://test:test@mysql:3306/inazaoui_test?serverVersion=8.0

    steps:
      - uses: actions/checkout@v4

      - name: Install system dependencies
        run: |
          apt-get update
          apt-get install -y \
            git unzip zip libzip-dev libicu-dev \
            default-mysql-client

      - name: Install PHP extensions
        run: docker-php-ext-install pdo_mysql intl zip

      - name: Install Composer
        run: |
          php -r "copy('https://getcomposer.org/installer', 'composer-setup.php');"
          php composer-setup.php --install-dir=/usr/local/bin --filename=composer

      - name: Install dependencies
        run: composer install --no-interaction --prefer-dist --no-progress

      - name: Wait for MySQL
        run: |
          for i in {1..30}; do
            mysqladmin ping -h mysql -u test -ptest && break
            sleep 2
          done

      - name: Create schema (NO database creation)
        run: php bin/console doctrine:schema:create

      - name: Run PHPUnit
        run: php bin/phpunit

      - name: Run PHPStan
        run: vendor/bin/phpstan analyse --no-progress --memory-limit=1G
