name: CI Symfony

on:
  push:
    branches: [ main ]
  pull_request:
    branches: [ main ]

jobs:
  quality:
    runs-on: ubuntu-latest

    steps:
      # 1. Récupération du code
      - name: Checkout code
        uses: actions/checkout@v4

      # 2. Installation de PHP avec Xdebug (coverage)
      - name: Setup PHP
        uses: shivammathur/setup-php@v2
        with:
          php-version: '8.4'
          coverage: xdebug
          extensions: mbstring, intl, pdo_mysql

      # 3. Validation du fichier composer.json
      - name: Validate composer.json
        run: composer validate --strict

      # 4. Installation des dépendances
      - name: Install dependencies
        run: composer install --no-interaction --prefer-dist

      # 5. Exécution des tests PHPUnit + couverture
      - name: Run PHPUnit with coverage
        run: |
          php bin/phpunit \
            --coverage-text \
            --coverage-clover=coverage.xml

      # 6. Upload du rapport de couverture (artifact)
      - name: Upload coverage report
        uses: actions/upload-artifact@v4
        with:
          name: coverage-clover
          path: coverage.xml

      # 7. Analyse statique PHPStan
      - name: Run PHPStan
        run: vendor/bin/phpstan analyse --no-progress
